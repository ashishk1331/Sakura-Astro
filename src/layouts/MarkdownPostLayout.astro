---
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} frontmatter={frontmatter}>
	<a href="/blog" class="text-neutral-800">back</a>
	<h1 class="text-2xl lg:text-3xl my-16">{frontmatter.title}</h1>
	<article class="prose prose-zinc max-w-[80ch] leading-8 prose-hr:border-neutral-200 prose-blockquote:italic prose-h2:font-normal prose-h3:font-normal prose-blockquote:text-2xl prose-blockquote:font-thin prose-blockquote:pr-4">
		<slot />
	</article>
</BaseLayout>