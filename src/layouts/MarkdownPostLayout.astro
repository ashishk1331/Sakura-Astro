---
import { format } from "date-fns";
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} frontmatter={frontmatter}>
  <a href="/blog" class="text-neutral-800">back</a>
  <div class="my-16 space-y-4">
    <h1 class="text-2xl lg:text-3xl">{frontmatter.title}</h1>
    <div class="flex items-center gap-4">
      <p>{frontmatter.author}</p>
      <div class="w-1 h-1 aspect-square rounded-full bg-neutral-700"></div>
      <p>{format(frontmatter.pubDate, "dd MMM yyyy")}</p>
    </div>
  </div>
  <article
    class="prose prose-zinc max-w-[80ch] leading-8 prose-hr:border-neutral-200 prose-blockquote:italic prose-h2:font-normal prose-h3:font-normal prose-blockquote:text-2xl prose-blockquote:font-thin prose-blockquote:pr-4"
  >
    <slot />
  </article>
</BaseLayout>
