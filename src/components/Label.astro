---
const { title, link, imageSource } = Astro.props;
const imageFound = Boolean(imageSource);
---

<style>
  a > span {
    @apply underline decoration-primary underline-offset-2;
  }
</style>

<a href={link} class="inline-flex items-baseline">
  {
    imageFound && (
      <img
        loading="lazy"
        src={imageSource}
        alt=""
        class="mx-1 size-5 self-center rounded-full transition-all"
      />
    )
  }
  <span class="lg:group-hover:underline">{title}</span>
</a>
