---
const { title, link, imageSource } = Astro.props;
const imageFound = Boolean(imageSource);
---

<style>
  a > span {
    @apply underline decoration-fuchsia-300 underline-offset-2;
  }
</style>

<a href={link} class="group inline-flex items-baseline">
  {
    imageFound && (
      <img
        loading="lazy"
        src={imageSource}
        alt=""
        class="mx-1 size-5 self-center rounded-full transition-all md:group-hover:size-8"
      />
    )
  }
  <span class="lg:group-hover:underline">{title}</span>
</a>
