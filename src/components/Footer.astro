---
import { captilize } from "../utils/textUtils.js";

const LINKS = {
  information: [
    {
      title: "Work",
      href: "/work",
    },
    {
      title: "Projects",
      href: "/projects",
    },
    {
      title: "Contact",
      href: "/contact",
    },
  ],
  browse: [
    {
      title: "Blog",
      href: "/blog",
    },
    {
      title: "Twitter",
      href: "https://twitter.com/AshishK1331",
    },
  ],
};
---

<hr class="border-primary/70" />
<footer class="mb-8 mt-auto grid grid-cols-2 gap-8 overflow-hidden py-16">
  {
    Object.keys(LINKS).map((key) => (
      <ul class="space-y-4">
        <span class="text-xs">{captilize(key)}</span>
        {LINKS[key].map(({ title, href }) => (
          <li class="group text-lg">
            <a
              href={href}
              class="decoration-primary decoration-wavy underline-offset-2 group-hover:underline"
            >
              {title}
            </a>
          </li>
        ))}
      </ul>
    ))
  }
</footer>
