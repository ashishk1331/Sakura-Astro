---
import { captilize } from "../utils/textUtils.js";

const LINKS = {
	information: [
		{
			title: 'Home',
			href: '/'
		},
		{
			title: 'Work',
			href: '/work'
		},
		{
			title: 'Projects',
			href: '/projects'
		},
		{
			title: 'Contact',
			href: '/contact'
		},
	],
	browse: [
		{
			title: 'Blog',
			href: '/blog'
		},
		{
			title: 'Twitter',
			href: 'https://twitter.com/AshishK1331'
		},
		{
			title: 'Go North',
			href: 'https://go-north.vercel.app/'
		},
	],
};

---

<hr />
<footer class="text-sm grid grid-cols-2 gap-8 mt-auto pt-16 pb-8">
	{
		Object.keys(LINKS).map((key) => (
			<ul class="space-y-4">
				<span class="font-medium">{captilize(key)}</span>
				{
					LINKS[key].map(({ title, href }) => (
						<li>
							<a href={href}>{title}</a>
						</li>
					))
				}
			</ul>
		))
	}
</footer>